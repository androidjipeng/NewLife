<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoshulin.vipbanlv.user.frament.UserListInforFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_48dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:background="@drawable/bg_orange_round_corner_ripple"
            android:text="出租教程"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/middle_word" />

        <Button
            android:visibility="gone"
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/padding_10dp"
            android:background="@drawable/bg_orange_round_corner_ripple"
            android:text="实惠优充"
            android:textColor="@color/white" />
    </LinearLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/common_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
