<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="@dimen/padding_8dp"
    android:layout_marginBottom="@dimen/padding_8dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_second"
        android:layout_width="@dimen/padding_40dp"
        android:layout_height="@dimen/padding_40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:src="@mipmap/iconapp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_15dp">

        <TextView
            android:textColor="@color/color_333333"
            android:id="@+id/tv_second_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1。哈哈"
            android:textSize="@dimen/small_word" />

        <TextView
            android:textColor="@color/color_333333"
            android:id="@+id/tv_second_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2。哈哈"
            android:textSize="@dimen/small_word" />
    </LinearLayout>
</LinearLayout>
