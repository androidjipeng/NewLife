<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_supply"
    tools:context=".activity.SupplyAccountActivity">

    <com.xiaoshulin.vipbanlv.utils.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_48dp"
        android:background="@color/white"
        app:centerText="账号详情"
        app:centerTextColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:gravity="center"
            android:text="试用期:"
            android:textColor="@color/color_333333" />

        <EditText
            android:phoneNumber="true"
            android:minWidth="150dp"
            android:lines="1"
            android:id="@+id/supply_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:background="@null"
            android:gravity="left|center"
            android:hint="1~365天"
            android:text=""
            android:textColor="@color/color_828292"
            android:textSize="@dimen/small_word" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/money_value1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/padding_15dp"
            android:gravity="center"
            android:text="最多可赚取150元"
            android:textColor="@color/red" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:gravity="center"
            android:text="微信号:"
            android:textColor="@color/color_333333" />

        <EditText
            android:lines="1"
            android:id="@+id/supply_value1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:background="@null"
            android:gravity="left|center"
            android:hint="用于体现提醒和账号问题反馈"
            android:text=""
            android:textColor="@color/color_828292"
            android:textSize="@dimen/small_word" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:gravity="center"
            android:text="账号:"
            android:textColor="@color/color_333333" />

        <EditText
            android:lines="1"
            android:id="@+id/supply_value2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:background="@null"
            android:gravity="left|center"
            android:hint="请输入有效账号"
            android:text=""
            android:textColor="@color/color_828292"
            android:textSize="@dimen/small_word" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/padding_15dp"
            android:gravity="center"
            android:text="密码:"
            android:textColor="@color/color_333333" />

        <TextView
            android:layout_marginLeft="@dimen/padding_15dp"
            android:textColor="@color/color_828292"
            android:gravity="left|center"
            android:text="vipbanlv.com#"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:lines="1"
            android:id="@+id/supply_value3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|center"
            android:hint="+三位数字"
            android:text=""
            android:textColor="@color/color_828292"
            android:textSize="@dimen/small_word" />
    </LinearLayout>

    <Button
        android:id="@+id/supply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginTop="@dimen/padding_15dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:background="@drawable/bg_orange_round_corner_ripple"
        android:text="提交账号"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginTop="@dimen/small_db"
        android:layout_marginRight="@dimen/padding_15dp"
        android:text="@string/supplyAccountInfo"
        android:textColor="@color/color_828292" />
</LinearLayout>