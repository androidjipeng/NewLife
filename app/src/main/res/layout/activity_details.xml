<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiaoshulin.vipbanlv.user.DetailsActivity">

    <com.xiaoshulin.vipbanlv.utils.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_48dp"
        android:background="@color/white"
        app:centerText=""
        app:centerTextColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_15dp"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/middle_word" />
    </LinearLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:layout_marginTop="@dimen/padding_15dp"
        android:background="@drawable/bg_orange_round_corner_ripple"
        android:text="申请提现"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_15dp"
        android:layout_marginRight="@dimen/padding_15dp"
        android:layout_marginTop="@dimen/small_db"
        android:text="您购买的账号只能您一个人一个端试用，如果是自己多端或分享给其他人试用导致无法享受会员服务，我们将不予解决，如果不是上述原因导致的无法观看情况，可以通过《伴侣你好》微信公众号和24小时客服微信号：xiaoshulinapp,实时客服反馈！"
        android:textColor="@color/color_828292" />
</LinearLayout>
