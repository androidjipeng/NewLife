<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_recive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_45dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_recive"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:padding="@dimen/padding_10dp"
                android:id="@+id/chat_recive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10dp"
                android:background="@drawable/bg_white_round_corner_ripple"
                android:maxWidth="200dp"
                android:text="" />
        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/padding_45dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp">

            <TextView
                android:padding="@dimen/padding_10dp"
                android:id="@+id/chat_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10dp"
                android:layout_toLeftOf="@+id/img_send"
                android:background="@drawable/bg_orange_round_corner_ripple"
                android:maxWidth="200dp"
                android:textColor="@color/white"
                android:text="" />

            <ImageView
                android:id="@+id/img_send"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
